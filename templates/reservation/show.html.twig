{% extends 'baseEMP.html.twig' %}

{% block title %}Détails de la Réservation{% endblock %}

{% block heading %}Détails de la Réservation{% endblock %}

{% block content %}
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Informations sur la Réservation</h6>
        </div>
        <div class="card-body">
            <table class="table table-bordered">
                <tbody>
                    <tr>
                        <th scope="row">ID</th>
                        <td>{{ reservation.id }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Date Début</th>
                        <td>{{ reservation.datedebut ? reservation.datedebut|date('Y-m-d') : '' }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Date Fin</th>
                        <td>{{ reservation.datefin ? reservation.datefin|date('Y-m-d') : '' }}</td>
                    </tr>
                </tbody>
            </table>

            <div class="mt-3">
                <a href="{{ path('app_reservation_index') }}" class="btn btn-secondary">Retour à la liste</a>
                <a href="{{ path('app_reservation_edit', {'id': reservation.id}) }}" class="btn btn-primary">Modifier</a>
            </div>

            <div class="mt-2">
                {{ include('reservation/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
