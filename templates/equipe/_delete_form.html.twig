<a href="#" onclick="event.preventDefault(); 
    if(confirm('Are you sure you want to delete this item?')) { 
        document.getElementById('delete-form-{{ equipe.id }}').submit(); 
    }" 
    class="btn btn-delete">
    <i class="fas fa-trash me-1"></i> Delete
</a>

<form id="delete-form-{{ equipe.id }}" method="post" action="{{ path('app_equipe_delete', {'id': equipe.id}) }}" class="d-none">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ equipe.id) }}">
</form>