<a href="#" onclick="event.preventDefault(); 
    if(confirm('Are you sure you want to delete this task?')) { 
        document.getElementById('delete-form-{{ tache.id }}').submit(); 
    }" 
    class="btn btn-danger btn-sm">
    <i class="fas fa-trash me-1"></i>
</a>

<form id="delete-form-{{ tache.id }}" method="post" action="{{ path('app_tache_delete', {'id': tache.id}) }}" class="d-none">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ tache.id) }}">
</form>