{% form_theme form 'form/form_custom_layout.html.twig' %}
{{ form_start(form, {'attr': {'enctype': 'multipart/form-data'}}) }}

    <!-- Champ 'nom' -->
    <div class="form-group">
        {{ form_label(form.nom) }}
        {{ form_widget(form.nom, { 'attr': {'class': form.nom.vars.errors|length > 0 ? 'form-control is-invalid' : 'form-control'} }) }}
        {% if form.nom.vars.errors|length > 0 %}
            <div class="invalid-feedback">
                {{ form_errors(form.nom) }}
            </div>
        {% endif %}
    </div>

    <!-- Champ 'type' -->
    <div class="form-group">
        {{ form_label(form.type) }}
        {{ form_widget(form.type, { 'attr': {'class': form.type.vars.errors|length > 0 ? 'form-control is-invalid' : 'form-control'} }) }}
        {% if form.type.vars.errors|length > 0 %}
            <div class="invalid-feedback">
                {{ form_errors(form.type) }}
            </div>
        {% endif %}
    </div>

    <!-- Champ 'etat' -->
    <div class="form-group">
        {{ form_label(form.etat) }}
        {{ form_widget(form.etat, { 'attr': {'class': form.etat.vars.errors|length > 0 ? 'form-control is-invalid' : 'form-control'} }) }}
        {% if form.etat.vars.errors|length > 0 %}
            <div class="invalid-feedback">
                {{ form_errors(form.etat) }}
            </div>
        {% endif %}
    </div>

    <!-- Champ 'prix' -->
    <div class="form-group">
        {{ form_label(form.prix) }}
        {{ form_widget(form.prix, { 'attr': {'class': form.prix.vars.errors|length > 0 ? 'form-control is-invalid' : 'form-control'} }) }}
        {% if form.prix.vars.errors|length > 0 %}
            <div class="invalid-feedback">
                {{ form_errors(form.prix) }}
            </div>
        {% endif %}
    </div>

    <div class="form-group">
    {{ form_label(form.image) }}
    {{ form_widget(form.image, {'attr': {'class': 'form-control'}}) }}
    {{ form_errors(form.image) }}
    </div>


    <!-- Bouton de soumission -->
    <button class="btn btn-primary" type="submit">Ajouter la ressource</button>
{{ form_end(form) }}
