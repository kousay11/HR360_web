{{ form_start(form) }}
    <!-- Champ 'nom' -->
    <div class="form-group">
        {{ form_label(form.nom) }}
        {{ form_widget(form.nom, { 'attr': {'class': form.nom.vars.errors|length > 0 ? 'form-control is-invalid' : 'form-control'} }) }}
        {% if form.nom.vars.errors|length > 0 %}
            <div class="invalid-feedback">
                {{ form_errors(form.nom) }}
            </div>
        {% endif %}
    </div>

