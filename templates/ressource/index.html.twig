<!DOCTYPE html>

<title>Ressource index</title>

{% block body %}
    <h1>Ressource index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Type</th>
                <th>Etat</th>
                <th>Prix</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for ressource in ressources %}
            <tr>
                <td>{{ ressource.id }}</td>
                <td>{{ ressource.nom }}</td>
                <td>{{ ressource.type }}</td>
                <td>{{ ressource.etat }}</td>
                <td>{{ ressource.prix }}</td>
                <td>
                    <a href="{{ path('app_ressource_show', {'id': ressource.id}) }}">show</a>
                    <a href="{{ path('app_ressource_edit', {'id': ressource.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_ressource_new') }}">Create new</a>
{% endblock %}
