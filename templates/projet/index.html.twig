<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Project Dashboard</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="{{ asset('front/css/styleProjet.css') }}">
</head>
<body>

<div class="container">
    <h1 class="mb-4">Project Dashboard</h1>

    <!-- Top Controls -->
    <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap gap-3 top-controls">
        <div class="d-flex gap-2 flex-wrap">
            <input type="text" class="form-control search-box" placeholder="Search projects...">
            <button class="btn btn-prioritize"><i class="fas fa-sort-amount-up me-2"></i> Prioritize</button>
        </div>
        <div class="d-flex gap-2 flex-wrap">
            <a href="{{ path('app_projet_new') }}" class="btn btn-add"><i class="fas fa-plus me-2"></i> Add Project</a>
            <button class="btn btn-ai"><i class="fas fa-robot me-2"></i> AI Generator</button>
        </div>
    </div>

    <!-- Projects Grid -->
    <div class="row">
        {% for projet in projets %}
            <div class="col-md-4 mb-4">
                <div class="project-card" onclick="if(!event.target.closest('.action-buttons')) window.location='{{ path('app_projet_show', {'id': projet.id}) }}'">
                    <div class="project-card-header d-flex align-items-center gap-3">
                        <div class="project-icon">
                            <i class="fas fa-project-diagram"></i>
                        </div>
                        <h5 class="project-title">{{ projet.nom }}</h5>
                    </div>
                    <div class="project-card-body">
                        <div class="project-meta">
                            <i class="fas fa-align-left"></i>
                            <span>{{ projet.description|default('No description')|slice(0, 60) }}{% if projet.description|length > 60 %}...{% endif %}</span>
                        </div>
                        <div class="project-meta">
                            <i class="fas fa-calendar-day"></i>
                            <span>Start: {{ projet.dateDebut ? projet.dateDebut|date('M d, Y') : 'Not set' }}</span>
                        </div>
                        <div class="project-meta">
                            <i class="fas fa-calendar-check"></i>
                            <span>End: {{ projet.dateFin ? projet.dateFin|date('M d, Y') : 'Not set' }}</span>
                        </div>
                    </div>
                    <div class="project-card-footer">
                        <div class="action-buttons">
                            <a href="{{ path('app_projet_edit', {'id': projet.id}) }}" class="btn btn-modify"><i class="fas fa-edit me-1"></i> Edit</a>
                            {{ include('projet/_delete_form.html.twig') }}
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12">
                <div class="empty-state">
                    <i class="fas fa-folder-open"></i>
                    <h4>No projects found</h4>
                    <p>Get started by creating a new project</p>
                    <a href="{{ path('app_projet_new') }}" class="btn btn-add mt-2"><i class="fas fa-plus me-2"></i> Add Project</a>
                </div>
            </div>
        {% endfor %}
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>