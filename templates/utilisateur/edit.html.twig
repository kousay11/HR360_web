{% extends 'baseRH.html.twig' %}

{% block title %}Modifier Employé{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Modifier l'employé</h6>
        </div>
        <div class="card-body">
            {{ form_start(form) }}
                <div class="row">
                    <div class="col-md-6">
                        {{ form_row(form.nom) }}
                        {{ form_row(form.prenom) }}
                        {{ form_row(form.email) }}
                        {{ form_row(form.password) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.salaire) }}
                        {{ form_row(form.poste) }}
                        
                        <div class="form-group">
                            {{ form_label(form.image) }}
                            <div class="custom-file">
                                {{ form_widget(form.image, {'attr': {'class': 'custom-file-input'}}) }}
                                <label class="custom-file-label" for="utilisateur_image">
                                    {% if utilisateur.image %}
                                        {{ utilisateur.image }}
                                    {% else %}
                                        Choisir une image
                                    {% endif %}
                                </label>
                            </div>
                            {{ form_help(form.image) }}
                            {{ form_errors(form.image) }}
                            
                            {% if utilisateur.image %}
                                <div class="mt-3">
                                    <img src="{{ asset('uploads/images/' ~ utilisateur.image) }}" 
                                         alt="Photo actuelle" 
                                         class="img-thumbnail" 
                                         style="max-width: 200px;">
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
                
                <button class="btn btn-primary">{{ button_label|default('Enregistrer') }}</button>
                <a href="{{ path('app_utilisateur_index') }}" class="btn btn-secondary">Annuler</a>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
