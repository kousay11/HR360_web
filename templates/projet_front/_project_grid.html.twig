{% for projet in projets %}
	<div class="col-md-6 col-lg-4">
		<div class="card entity-card">
			<div class="card-header entity-header">
				<i class="fas fa-project-diagram entity-icon"></i>
				<h5 class="entity-title">{{ projet.nom }}</h5>
			</div>
			<div class="card-body entity-body">
				<p>
					<i class="fas fa-align-left"></i>
					{{ projet.description|default('No description')|slice(0, 60) }}
						{% if projet.description|length > 60 %}...
						{% endif %}
				</p>
				<hr>
				<div class="project-meta">
					<i class="fas fa-calendar-day"></i>
					<span>Start:
						{{ projet.dateDebut ? projet.dateDebut|date('M d, Y') : 'Not set' }}</span>
				</div>
				<div class="project-meta">
					<i class="fas fa-calendar-check"></i>
					<span>End:
                    {{ projet.dateFin ? projet.dateFin|date('M d, Y') : 'Not set' }}</span>
				</div>
			</div>
			<div class="card-footer entity-footer d-flex justify-content-between">
				<a href="{{ path('app_projet_front_show', {'id': projet.id}) }}" class="btn btn-outline-dark btn-sm">
					<i class="fas fa-eye me-1"></i>
					DÃ©tails
				</a>
			</div>
		</div>
	</div>
{% else %}
	<div class="col-12">
		<div class="empty-state">
			<i class="fas fa-folder-open"></i>
			<h4>No projects found</h4>
			<p>No projects match your search criteria</p>
		</div>
	</div>
{% endfor %}
