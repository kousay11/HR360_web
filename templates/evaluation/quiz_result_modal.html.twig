<div class="modal fade" id="quizResultModal" tabindex="-1" aria-labelledby="quizResultModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header {{ is_accepted ? 'bg-success' : 'bg-danger' }} text-white">
                <h5 class="modal-title" id="quizResultModalLabel">Résultat du Quiz</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center">
                <i class="fas {{ is_accepted ? 'fa-check-circle' : 'fa-times-circle' }} fa-5x {{ is_accepted ? 'text-success' : 'text-danger' }} mb-4"></i>
                <h3 class="modal-statut mb-3">{{ statut }}</h3>
                <p class="modal-score lead">Votre score: {{ score }}/10</p>
                <p class="text-muted">({{ correctCount }} bonnes réponses sur {{ totalQuestions }} questions)</p>
                <div class="progress mt-3" style="height: 10px;">
                    <div class="progress-bar {{ is_accepted ? 'bg-success' : 'bg-danger' }}" 
                         style="width: {{ (score/10)*100 }}%"></div>
                </div>
                <p class="modal-message mt-3">
                    {{ is_accepted ? 
                       'Félicitations! Vous avez réussi le quiz avec succès.' : 
                       'Malheureusement, vous n\'avez pas atteint le score requis.' 
                    }}
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times"></i> Fermer
                </button>
                <a href="{{ path('app_evaluation_show_front', {'idEvaluation': evaluation_id}) }}" class="btn btn-primary">
                    <i class="fas fa-info-circle"></i> Voir les détails
                </a>
            </div>
        </div>
    </div>
</div>