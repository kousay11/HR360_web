{% extends 'baseCAN.html.twig' %}

{% block title %}Mes Évaluations - HR360{% endblock %}

{% block css %}
{{ parent() }}
<style>
    .evaluation-section {
        padding: 80px 0;
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
    }
    
    .evaluation-card {
        background: #fff;
        border-radius: 12px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
        overflow: hidden;
        margin-bottom: 30px;
        transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.1);
        border: none;
        position: relative;
    }
    
    .evaluation-card:before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 4px;
        height: 100%;
        background: linear-gradient(to bottom, #4e73df, #224abe);
    }
    
    .evaluation-card:hover {
        transform: translateY(-8px) scale(1.02);
        box-shadow: 0 15px 35px rgba(0, 0, 0, 0.15);
    }
    
    .evaluation-header {
        padding: 20px 25px;
        background: #fff;
        border-bottom: 1px solid rgba(0, 0, 0, 0.05);
    }
    
    .evaluation-title {
        margin: 0;
        font-size: 1.3rem;
        color: #2c3e50;
        font-weight: 700;
    }
    
    .evaluation-date {
        font-size: 0.9rem;
        color: #6c757d;
    }
    
    .evaluation-body {
        padding: 25px;
    }
    
    .progress-container {
        margin-bottom: 20px;
    }
    
    .progress-label {
        display: flex;
        justify-content: space-between;
        margin-bottom: 5px;
        font-size: 0.85rem;
        font-weight: 600;
        color: #4e73df;
    }
    
    .progress {
        height: 10px;
        border-radius: 5px;
    }
    
    .progress-bar {
        border-radius: 5px;
    }
    
    .evaluation-comment {
        background: rgba(78, 115, 223, 0.05);
        border-radius: 8px;
        padding: 15px;
        margin-top: 20px;
    }
    
    .comment-title {
        font-weight: 600;
        color: #4e73df;
        margin-bottom: 10px;
    }
    
    .comment-text {
        color: #5a5c69;
        margin: 0;
    }
    
    .badge-result {
        font-size: 0.8rem;
        padding: 0.5em 1em;
        border-radius: 50px;
        font-weight: 600;
    }
    
    .badge-accepted {
        background: linear-gradient(135deg, #28a745 0%, #1e7e34 100%);
        color: white;
    }
    
    .badge-rejected {
        background: linear-gradient(135deg, #dc3545 0%, #bd2130 100%);
        color: white;
    }
    
    .badge-pending {
        background: linear-gradient(135deg, #ffc107 0%, #e0a800 100%);
        color: #212529;
    }
    
    .section-title {
        margin-bottom: 50px;
    }
    
    .section-title h2 {
        color: #4e73df;
        font-weight: 700;
        position: relative;
        display: inline-block;
        padding-bottom: 15px;
    }
    
    .section-title h2:after {
        content: '';
        position: absolute;
        left: 0;
        bottom: 0;
        width: 50px;
        height: 3px;
        background: linear-gradient(to right, #4e73df, #224abe);
    }
    
    .section-title p {
        color: #858796;
        font-size: 1.1rem;
    }
    
    .no-evaluations {
        text-align: center;
        padding: 80px 0;
        background: white;
        border-radius: 12px;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.05);
    }
    
    .no-evaluations i {
        font-size: 4rem;
        color: #dddfeb;
        margin-bottom: 25px;
    }
    
    .no-evaluations h4 {
        color: #4e73df;
        font-weight: 700;
        margin-bottom: 15px;
    }
    
    .no-evaluations p {
        color: #858796;
        font-size: 1.1rem;
        max-width: 500px;
        margin: 0 auto;
    }
</style>
{% endblock %}

{% block index %}
<!-- Evaluations Section -->
<section id="evaluations" class="evaluation-section">
  <div class="container" data-aos="fade-up">
    <div class="section-title text-center">
      <h2>Mes Évaluations</h2>
      <p>Retrouvez ici toutes vos évaluations</p>
    </div>

    <div class="row">
      {% if evaluations|length > 0 %}
        {% for evaluation in evaluations %}
        <div class="col-lg-6">
          <div class="evaluation-card">
            <div class="evaluation-header">
              <h3 class="evaluation-title">{{ evaluation.titreEva }}</h3>
              <div class="evaluation-date">
                {{ evaluation.dateEvaluation ? evaluation.dateEvaluation|date('d/m/Y H:i') : 'Date non définie' }}
                <span class="badge badge-result 
                  {% if evaluation.commentaire == 'ACCEPTÉ' %}badge-accepted
                  {% elseif evaluation.commentaire == 'REJETÉ' %}badge-rejected
                  {% else %}badge-pending{% endif %}">
                  {{ evaluation.commentaire }}
                </span>
              </div>
            </div>
            <div class="evaluation-body">
              <div class="progress-container">
                <div class="progress-label">
                  <span>Note Technique</span>
                  <span>{{ evaluation.noteTechnique }}/20</span>
                </div>
                <div class="progress">
                  <div class="progress-bar bg-{{ evaluation.noteTechnique >= 10 ? 'success' : 'warning' }}" 
                       style="width: {{ (evaluation.noteTechnique/20)*100 }}%"></div>
                </div>
              </div>
              
              <div class="progress-container">
                <div class="progress-label">
                  <span>Note Soft Skills</span>
                  <span>{{ evaluation.noteSoftSkills }}/20</span>
                </div>
                <div class="progress">
                  <div class="progress-bar bg-{{ evaluation.noteSoftSkills >= 10 ? 'info' : 'warning' }}" 
                       style="width: {{ (evaluation.noteSoftSkills/20)*100 }}%"></div>
                </div>
              </div>
              
              <div class="progress-container">
                <div class="progress-label">
                  <span>Score Quiz</span>
                  <span>{{ evaluation.scorequiz }}/10</span>
                </div>
                <div class="progress">
                  <div class="progress-bar bg-{{ evaluation.scorequiz > 7 ? 'success' : 'danger' }}" 
                       style="width: {{ (evaluation.scorequiz/10)*100 }}%"></div>
                </div>
              </div>
              
              {% if evaluation.commentaire %}
              <div class="evaluation-comment">
                <div class="comment-title">Commentaire</div>
                <p class="comment-text">{{ evaluation.commentaire }}</p>
              </div>
              {% endif %}
            </div>
          </div>
        </div>
        {% endfor %}
      {% else %}
        <div class="col-12">
          <div class="no-evaluations">
            <i class="fas fa-clipboard-list"></i>
            <h4>Aucune évaluation disponible</h4>
            <p>Vous n'avez pas encore d'évaluations. Elles apparaîtront ici une fois complétées.</p>
          </div>
        </div>
      {% endif %}
    </div>
  </div>
</section>
{% endblock %}