{% form_theme form 'form/form_custom_layout.html.twig' %}
{{ form_start(form, {'attr': {'class': 'task-form'}}) }}
<div class="mb-3">
	{{ form_label(form.statut, 'Status', {'label_attr': {'class': 'form-label'}}) }}
	{{ form_widget(form.statut, {'attr': {'class': 'form-select'}}) }}
	{{ form_errors(form.statut) }}
</div>

<div class="d-flex justify-content-between mt-4">
	<a href="{{ path(projetId ? 'app_tache_front_by_project' : 'app_tache_front_index', {'id': projetId}) }}" class="btn btn-outline-dark">
		<i class="fas fa-arrow-left me-2"></i>
		Cancel
	</a>
	<button type="submit" class="btn btn-outline-danger">
		<i class="fas fa-save me-2"></i>
		Update Status
	</button>
</div>
{{ form_end(form) }}
