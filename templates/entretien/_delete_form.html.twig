<form method="post" action="{{ path('app_entretien_delete', {'idEntretien': entretien.idEntretien}) }}" 
      onsubmit="return confirm('Êtes-vous vraiment sûr de vouloir supprimer définitivement cet entretien ? Cette action est irréversible.');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ entretien.idEntretien) }}">
    <button class="btn btn-danger btn-block">
        <i class="fas fa-trash-alt mr-2"></i>Supprimer définitivement
    </button>
</form>