{% extends 'base.html.twig' %}

{% block title %}Liste des Candidatures{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .candidature-card {
            border: none;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            margin-bottom: 20px;
            overflow: hidden;
        }
        .candidature-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
        }
        .card-header {
            background-color: #4e73df;
            color: white;
            padding: 15px 20px;
            border-bottom: none;
        }
        .card-body {
            padding: 20px;
        }
        .detail-item {
            display: flex;
            align-items: flex-start;
            margin-bottom: 12px;
        }
        .detail-icon {
            font-size: 16px;
            color: #4e73df;
            margin-right: 12px;
            margin-top: 3px;
            flex-shrink: 0;
        }
        .detail-content {
            flex-grow: 1;
        }
        .status-badge {
            padding: 5px 10px;
            border-radius: 20px;
            font-size: 0.8rem;
            font-weight: 600;
        }
        .file-link {
            color: #4e73df;
            text-decoration: none;
            transition: color 0.2s;
        }
        .file-link:hover {
            color: #2e59d9;
            text-decoration: underline;
        }
        .action-btns .btn {
            margin-right: 8px;
            border-radius: 20px;
            padding: 6px 16px;
            font-size: 0.85rem;
            font-weight: 500;
        }
        .empty-state {
            text-align: center;
            padding: 40px;
            background-color: #f8f9fc;
            border-radius: 10px;
        }
        .empty-state i {
            font-size: 50px;
            color: #dddfeb;
            margin-bottom: 20px;
        }
        .text-original {
    color: #28a745;
}
.text-modified {
    color: #6c757d;
}
    </style>
{% endblock %}

{% block body %}
    <div class="container py-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="h3 mb-0 text-gray-800">Liste des Candidatures</h1>
        </div>

        <div class="row">
            {% for candidature in candidatures %}
                <div class="col-md-6 col-lg-4">
                    <div class="candidature-card card mb-4">
                        <div class="card-header">
                            <h5 class="mb-0">{{ candidature.offre.titre ?? 'Offre non spécifiée' }}</h5>
                        </div>
                        <div class="card-body">
                            <div class="detail-item">
                                <i class="fas fa-info-circle detail-icon"></i>
                                <div class="detail-content">
                                    <span class="text-muted small">Statut</span>
                                    <div>
                                        <span class="status-badge bg-{{ candidature.statut == 'Accepté' ? 'success' : (candidature.statut == 'Refusé' ? 'danger' : 'warning') }}">
                                            {{ candidature.statut }}
                                        </span>
                                    </div>
                                </div>
                            </div>

                            <div class="detail-item">
                                <i class="fas fa-calendar-alt detail-icon"></i>
                                <div class="detail-content">
                                    <span class="text-muted small">Date</span>
                                    <div>{{ candidature.dateCandidature|date('d/m/Y H:i') }}</div>
                                </div>
                            </div>

                            <div class="detail-item">
                                <i class="fas fa-file-pdf detail-icon"></i>
                                <div class="detail-content">
                                    <span class="text-muted small">Documents</span>
                                    <div>
                                        <a href="{{ asset('uploads/cvs/' ~ candidature.cv) }}" class="file-link me-3" target="_blank">
                                            <i class="fas fa-file-alt me-1"></i>CV
                                        </a>
                                        <a href="{{ asset('uploads/lettres/' ~ candidature.lettreMotivation) }}" class="file-link" target="_blank">
                                            <i class="fas fa-file-contract me-1"></i>Lettre
                                        </a>
                                    </div>
                                </div>
                            </div>

                            {% if candidature.description %}
                            <div class="detail-item">
                                <i class="fas fa-align-left detail-icon"></i>
                                <div class="detail-content">
                                    <span class="text-muted small">Description</span>
                                    <div class="text-truncate" title="{{ candidature.description }}">
                                        {{ candidature.description }}
                                    </div>
                                </div>
                            </div>
                            {% endif %}

                            <div class="d-flex justify-content-between align-items-center mt-3 pt-3 border-top">
    <small class="text-muted">
        {% if candidature.dateModification and candidature.dateModification != candidature.dateCandidature %}
            <i class="fas fa-clock me-1"></i>Modifié le {{ candidature.dateModification|date('d/m/Y à H:i') }}
        {% else %}
            <i class="fas fa-check-circle me-1 text-success"></i>Candidature originale
        {% endif %}
    </small>
    <div class="action-btns">
        <a href="{{ path('app_candidature_show', {'idCandidature': candidature.idCandidature}) }}" 
           class="btn btn-sm btn-outline-primary">
            <i class="fas fa-eye"></i>
        </a>
        <a href="{{ path('app_candidature_edit', {'idCandidature': candidature.idCandidature}) }}" 
           class="btn btn-sm btn-outline-secondary">
            <i class="fas fa-edit"></i>
        </a>
    </div>
</div>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-12">
                    <div class="empty-state">
                        <i class="fas fa-folder-open"></i>
                        <h4 class="h5 text-gray-800 mb-3">Aucune candidature trouvée</h4>
                        <p class="mb-4">Vous n'avez aucune candidature pour le moment.</p>
                        <a href="#" class="btn btn-primary">
                            <i class="fas fa-plus me-2"></i>Créer une candidature
                        </a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}